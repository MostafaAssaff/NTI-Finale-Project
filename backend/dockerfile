# BACKEND DOCKERFILE

# Stage 1: Build the Node.js backend
FROM node:14 AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

# Stage 2: Run Node.js and Nginx
FROM nginx:alpine

COPY --from=build /app /app
COPY default.conf /etc/nginx/conf.d/default.conf

CMD ["sh", "-c", "node /app/server.js & nginx -g 'daemon off;'"]

EXPOSE 80
